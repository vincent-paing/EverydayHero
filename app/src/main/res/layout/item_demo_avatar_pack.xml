<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    >

  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/dimen_small"
      app:cardCornerRadius="@dimen/dimen_small"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <me.aungkyawpaing.everydayhero.components.SquareView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_gravity="center"
          android:alpha="0.1"
          android:background="@android:color/background_dark"
          />

      <View
          android:layout_width="match_parent"
          android:layout_height="8dp"
          android:layout_margin="@dimen/dimen_small"
          android:alpha="0.1"
          android:background="@android:color/background_dark"
          />


      <View
          android:id="@+id/view_right"
          android:layout_width="match_parent"
          android:layout_height="8dp"
          android:layout_alignParentRight="true"
          android:layout_marginBottom="@dimen/dimen_small"
          android:layout_marginLeft="@dimen/dimen_small"
          android:layout_marginRight="@dimen/dimen_small"
          android:layout_weight="1"
          android:alpha="0.1"
          android:background="@android:color/background_dark"
          />


    </LinearLayout>


  </android.support.v7.widget.CardView>

</FrameLayout>