<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/dimen_small"
      app:cardCornerRadius="@dimen/dimen_small"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <me.aungkyawpaing.everydayhero.components.SquareImageView
          android:id="@+id/iv_pack"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/ic_square_placeholder"
          />

      <TextView
          android:id="@+id/tv_pack_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/dimen_small"
          android:gravity="center"
          android:maxLines="1"
          android:textColor="@color/primary_text"
          android:textSize="@dimen/material_text_subhead"
          app:autoSizeTextType="uniform"
          tools:text="Elf Pack"
          />

      <TextView
          android:id="@+id/btn_buy"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_gravity="right"
          android:layout_marginBottom="@dimen/dimen_medium"
          android:layout_marginLeft="@dimen/dimen_medium"
          android:layout_marginRight="@dimen/dimen_medium"
          android:layout_weight="1"
          android:background="@drawable/bg_btn_bought"
          android:fontFamily="sans-serif-thin"
          android:foreground="?attr/selectableItemBackground"
          android:gravity="center"
          android:padding="@dimen/dimen_small"
          tools:text="Purchased"
          tools:textColor="@color/fruit_salad"
          />


    </LinearLayout>


  </android.support.v7.widget.CardView>

</FrameLayout>